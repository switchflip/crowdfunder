<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">CrowdFunder</a>
    <ul class="nav">
      <li class="<%= 'active' if params[:controller] == 'welcome'%>"><a href="/">Home</a></li>
      <li class="<%= 'active' if params[:controller] == 'projects' %>">
        <%= link_to "Projects", projects_url %>
      </li>
      <% if logged_in? %>
        <li class="<%= 'active' if params[:controller] == 'my/projects'%>">
          <%= link_to "My Projects", my_projects_url %>
        </li>
      <% end %>
    </ul>

      <div class="pull-right">
        <% if logged_in? %>
          <%= link_to 'Logout', :session, :method => :delete, class: 'btn' %>
        <% else %>
          <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary' %>
          <%= link_to 'Sign In', [:new, :session], class: 'btn btn-success' %>
        <% end %>
      </div>

  </div>
</div>
