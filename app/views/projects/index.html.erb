<h1>
  Projects
  <small><%= page_entries_info @projects %></small>
</h1>

<div class="well">
  <%= link_to '+ New Project', [:new, :my, :project], class: 'btn btn-small btn-primary pull-right' %>
</div>

<ul>
<% @projects.each do |project| %>
  <li class="project">
    <%= link_to project.title, project %>
    <br>
    <%= project.teaser %>
  </li>
<% end %>
</ul>

<%= paginate @projects %>

